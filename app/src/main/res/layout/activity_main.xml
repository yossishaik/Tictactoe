<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#151bff">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/iv4"
        android:layout_margin="10dp"
        android:background="#ffffff"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/iv5"
        android:background="#ffffff"
        android:layout_alignTop="@+id/iv4"
        android:layout_toRightOf="@+id/iv4"
        android:layout_toEndOf="@+id/iv4" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/iv3"
        android:background="#ffffff"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv4"
        android:layout_toStartOf="@+id/iv4" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/iv0"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        android:layout_above="@+id/iv4"
        android:layout_toLeftOf="@+id/iv1"
        android:layout_toStartOf="@+id/iv1" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="10dp"
        android:id="@+id/iv1"
        android:background="#ffffff"
        android:layout_alignTop="@+id/iv0"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/iv2"
        android:background="#ffffff"
        android:layout_alignTop="@+id/iv1"
        android:layout_toRightOf="@+id/iv1"
        android:layout_toEndOf="@+id/iv1" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/iv6"
        android:background="#ffffff"
        android:layout_below="@+id/iv4"
        android:layout_toLeftOf="@+id/iv4"
        android:layout_toStartOf="@+id/iv4" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/iv7"
        android:background="#ffffff"
        android:layout_alignTop="@+id/iv6"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/iv8"
        android:background="#ffffff"
        android:layout_below="@+id/iv4"
        android:layout_toRightOf="@+id/iv4"
        android:layout_toEndOf="@+id/iv4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:id="@+id/tvMsg"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#f0ff2a" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Game"
        android:id="@+id/bNew"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/iv7"
        android:layout_alignStart="@+id/iv7"
        android:onClick="clickNewGame" />
</RelativeLayout>
